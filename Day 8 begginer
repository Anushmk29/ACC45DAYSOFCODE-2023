#include <iostream>
using namespace std;

int main() {
	// your code goes here
	
	int x,y,t;
	cin>>t;
	while(t--)
	{
	    cin>>x>>y;
	    int man_can_bath= 2*y;
	    int divi = x/man_can_bath;
	    if(man_can_bath<=x)
	    {
	        cout<<divi<<endl;
	    }
	    else cout<<0<<endl;
	    
	}
	return 0;
}
